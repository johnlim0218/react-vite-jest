{
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "commonjs", // import 문법 (commonjs -> require, exnext -> import)
    "target": "es5",
    "lib": ["ES2020", "DOM"],
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
  },
  "references": [{ "path": "./tsconfig.node.json" }]
}
